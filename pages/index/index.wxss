page {
  background: #f0eff5;
}

.searchOutterView {
  padding: 15rpx 15rpx;
  background: #fff;
}

.searchInnerView {
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 720rpx;
  height: 58rpx;
  line-height: 58rpx;
  background: #eee;
  border: 2rpx solid #ececec;
  border-radius: 10rpx;
}

.searchInnerView > image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.searchInnerView > text {
  font-size: 24rpx;
  color: #b2b2b2;
}

swiper {
  height: 400rpx;
}

swiper image {
  width: 750rpx;
  height: 400rpx;
}

.navView {
  display: flex;
  flex-wrap: wrap;
  height: 464rpx;
  align-content: space-around;
  background: #fff;
}

.navItemView {
  width: 150rpx;
  text-align: center;
  margin:0 50rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.navItemView > image {
  width: 150rpx;
  height: 150rpx;
}

.onLineView{
  height: 88rpx;
  background: #fff;
  margin: 24rpx 0;
  padding: 0 30rpx;

  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.onLineView > image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}

.onLineView > text {
  font-size: 26rpx;
  font-weight: bold;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transform: rotate(45deg);
  position: absolute;
  right: 30rpx;
}

.hotArticleView {
  padding: 0 30rpx;
  background: #fff;
  margin-bottom: 24rpx;
}

.hotArticleTitleView {
  height: 88rpx;
  font-size: 30rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #f1f1f1;
  line-height: 88rpx;
}

.articleView {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}

.articleView image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.articleTitle {
  font-size: 28rpx;
  font-weight: bold;
  line-height: 50rpx;
}

.articleDesc {
  font-size: 26rpx;
  color:#a9a9a9;
  line-height: 35rpx;
}

.moreView {
  display: flex;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color:#a6a6a6;
}

.askView {
  position: fixed;
  bottom:100rpx;
  right:10rpx;
}

.askView > image {
  width: 100rpx;
  height: 100rpx;
}