page {
  background: #f0eff5;
}

.userInfoView {
  background: #87cefa;
  padding: 30rpx 0 40rpx 0;
  text-align: center;
}

.userInfoView > view:nth-child(1) {
  color:#fff;
  font-size: 34rpx;
}

.userInfoView > view:nth-child(2) {
  color:#fff;
  font-size: 30rpx;
  padding: 30rpx 0;
}

.userInfoView > view:nth-child(3) {
  color:#0f9ffb;
  font-size: 34rpx;
}


.userItemListView {
  background: #fff;
  padding: 0 50rpx;
  margin: 24rpx 0;
}

.userItemView {
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #f1f1f1;
  display: flex;
  justify-content: space-between;
  align-items:center;
}

.userItemListView > view:last-child {
  border: none;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transform: rotate(45deg);
}


