.hotArticleView {
  padding: 0 22rpx;
}

.articleView {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}

.articleView image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.articleTitle {
  font-size: 28rpx;
  font-weight: bold;
  line-height: 50rpx;
}

.articleDesc {
  font-size: 26rpx;
  color:#a9a9a9;
  line-height: 35rpx;
}

.loadingView {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f0eff5;
  height: 88rpx;
}

.loadingView > image{
  height: 48rpx;
  width: 48rpx;
  margin-right: 10rpx;
}

.loadingView > text {
  font-size: 28rpx;
}